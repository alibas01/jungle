<header class="page-header">
  <h1>Dashboard</h1>
</header>

<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="4">Counts</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        Product's Count:
      </td>
      <td>
        <%= @product_count %>
      </td>
      <td> 
        <%= link_to 'All Products', [:admin, :products], class: 'btn btn-success' %>
      </td>  
    </tr>
    <tr>
      <td>
        Categories' Count:
      </td>
      <td>
        <%= @category_count %>
      </td>
      <td> 
        <%= link_to 'All Categories', [:admin, :products], class: 'btn btn-success' %>
      </td>  
    </tr>
  </tbody>
</table>


